<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="notification">
        <item name="android:textColor">#6B6B6B</item>
    </style>
    
    <style name="myProgressBarStyleLarge">
        <item name="android:indeterminateDrawable">@anim/loading_dialog_animation</item>
        <item name="android:minWidth">40dip</item>
        <item name="android:maxWidth">40dip</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
    </style>
    
    <style name="layout_wrap_all">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <!-- 自定义loading dialog 背景不变暗 -->
    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="dialog_common" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="layout_match_wrap" parent="@style/layout_match_all">
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- 大布局背景通用总样式 -->
    <style name="layoutbg" parent="@style/layout_match_all">
        <item name="android:background">@color/base_bg_gray</item>
    </style>
    
    <style name="layout_match_all">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <!-- 导航头部背景样式 -->
    <style name="layoutHead" parent="@style/layout_match_all">
        <item name="android:layout_height">45dip</item>
        <item name="android:background">@color/base_bg_white</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>
    

    <!-- 导航条标题部分样式 -->
    <style name="common_navgator_textview" parent="@style/layout_wrap_all">
        <item name="android:textSize">@dimen/large22_textSize</item>
        <item name="android:textColor">#2b2b2b</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="textview" parent="@style/layout_wrap_all">
        <item name="android:textSize">@dimen/normal_textSize</item>
        <item name="android:textColor">@color/title_light_gray</item>
    </style>
    
    <style name="common_btn">
        <item name="android:minWidth">0px</item>
        <item name="android:minHeight">0px</item>
    </style>
    
    <!-- 标题栏的文字 -->
    <style name="titlebar_txt">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/large22_textSize</item>
        <item name="android:textColor">@color/base_bg_white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <!-- 标题栏的右边边按钮 -->
    <style name="titlebar_right_btn" parent="common_btn">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
    </style>
</resources>
