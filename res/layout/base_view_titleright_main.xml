<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false" >

    <ImageView
        android:id="@+id/btn_fragment_right3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_fragment_right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_convertion_pup"
        android:gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingLeft="5dip"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_fragment_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_title_right_bg_selector"
        android:gravity="center"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingLeft="5dip"
        android:paddingRight="10dip"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</LinearLayout>