<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_view"
    style="@style/layout_match_wrap"
    android:background="@color/white"
    android:minWidth="260dp"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/layout_match_wrap"
        android:layout_marginBottom="@dimen/common_margin_double_size"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_dialog"
            style="@style/layout_wrap_all"
            android:layout_marginLeft="@dimen/common_margin_double_size"
            android:layout_marginTop="@dimen/common_margin_double_size"
            android:src="@drawable/dialog" />

        <LinearLayout
            style="@style/layout_match_wrap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_margin_double_size"
            android:layout_marginRight="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                style="@style/layout_wrap_all"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/dialog_title"
                android:textSize="@dimen/large_textSize" />

            <TextView
                android:id="@+id/context"
                style="@style/layout_wrap_all"
                android:textColor="@color/dialog_content"
                android:textSize="@dimen/medium_textSize" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"
        android:gravity="left" />

    <LinearLayout
        android:id="@+id/ll_btns"
        style="@style/layout_match_wrap"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>