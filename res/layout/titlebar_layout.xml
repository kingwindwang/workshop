<RelativeLayout
	android:id="@+id/titlebar_content"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/titlebar_height"
	android:background="@drawable/img_login_bgred">

	<Button
		android:id="@+id/titlebar_left_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/common_margin"
		android:background="@drawable/btn_title_left_back_selector"
		android:minHeight="0dp"
		android:minWidth="0dp"/>

	<ImageView
		android:id="@+id/kedao_logo1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:contentDescription="@string/app_name"
		android:visibility="invisible"/>

	<TextView
		android:id="@+id/titlebar_title"
		style="@style/titlebar_txt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<Button
		android:id="@+id/titlebar_right_btn"
		style="@style/titlebar_right_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

</RelativeLayout>